# Docker environment configuration
# This file is used when running in the unified Docker setup

# API URLs - Using Docker service names
NEXT_PUBLIC_API_URL=http://backend:5000
NEXT_PUBLIC_BACKEND_URL=http://backend:5000
NEXT_PUBLIC_BFF_URL=http://bff:8000
NEXT_PUBLIC_WS_URL=ws://bff:8000

# GitHub OAuth - Redirect to host machine
NEXT_PUBLIC_GITHUB_OAUTH_REDIRECT=http://localhost:3000/(auth)/github/callback

# Environment
NEXT_PUBLIC_ENV=development
NODE_ENV=development

# Feature flags
NEXT_PUBLIC_ENABLE_WORLDBUILDING=true
NEXT_PUBLIC_ENABLE_GIT_INTEGRATION=true
NEXT_PUBLIC_ENABLE_BILLING=false
NEXT_PUBLIC_ENABLE_AUTH=true

# Debug
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_LOG_LEVEL=debug