# PlotWeaver UI Production Environment Configuration

# App Configuration
NEXT_PUBLIC_APP_URL=https://app.plotweaver.com
NEXT_PUBLIC_APP_NAME=PlotWeaver
NEXT_PUBLIC_APP_VERSION=1.0.0

# Mode-Sets Configuration
NEXT_PUBLIC_DEFAULT_MODE_SET=professional-writer
NEXT_PUBLIC_AVAILABLE_MODE_SETS=professional-writer,ai-first,editor,hobbyist

# Feature Flags
NEXT_PUBLIC_ENABLE_LOCKING=true
NEXT_PUBLIC_ENABLE_PREGENERATION=true
NEXT_PUBLIC_ENABLE_CONTINUITY=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_GIT_INTEGRATION=true

# API Configuration
NEXT_PUBLIC_API_URL=https://api.plotweaver.com
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_SSE_TIMEOUT=30000
NEXT_PUBLIC_SSE_RETRY_ATTEMPTS=5

# Authentication
NEXT_PUBLIC_AUTH_PROVIDER=github
NEXTAUTH_URL=https://app.plotweaver.com

# Python Backend
PYTHON_API_URL=https://api.plotweaver.com

# Storage
STORAGE_PROVIDER=s3
AWS_REGION=us-east-1
AWS_S3_BUCKET=plotweaver-production-files

# Monitoring and Analytics
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1

# Production Settings
NODE_ENV=production
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=warn

# Collaboration Features
WEBSOCKET_URL=wss://collaboration.plotweaver.com
COLLABORATION_SERVER_URL=https://collaboration.plotweaver.com

# Content Moderation
CONTENT_MODERATION_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=10

# Session Configuration
SESSION_MAX_AGE=86400
SESSION_UPDATE_AGE=3600

# CORS Configuration
CORS_ORIGIN=https://app.plotweaver.com
CORS_CREDENTIALS=true

# Logging
LOG_FORMAT=json
LOG_DESTINATION=file
LOG_FILE=/app/logs/app.log

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Feature Rollout
FEATURE_FLAG_SERVICE=internal
FEATURE_FLAG_REFRESH_INTERVAL=300000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30