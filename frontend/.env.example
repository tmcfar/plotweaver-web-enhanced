# PlotWeaver UI Environment Configuration Example

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=PlotWeaver
NEXT_PUBLIC_APP_VERSION=1.0.0

# Mode-Sets Configuration
NEXT_PUBLIC_DEFAULT_MODE_SET=professional-writer
NEXT_PUBLIC_AVAILABLE_MODE_SETS=professional-writer,ai-first,editor,hobbyist

# Feature Flags
NEXT_PUBLIC_ENABLE_LOCKING=true
NEXT_PUBLIC_ENABLE_PREGENERATION=true
NEXT_PUBLIC_ENABLE_CONTINUITY=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_GIT_INTEGRATION=true

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_SSE_TIMEOUT=30000
NEXT_PUBLIC_SSE_RETRY_ATTEMPTS=5

# Authentication
NEXT_PUBLIC_AUTH_PROVIDER=github
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Python Backend
PYTHON_API_URL=http://localhost:8000
PYTHON_API_KEY=your_python_api_key

# Database (if using direct connection)
DATABASE_URL=postgresql://user:password@localhost:5432/plotweaver

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# File Storage
STORAGE_PROVIDER=local
# For AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=plotweaver-files
# For local storage
LOCAL_STORAGE_PATH=/app/uploads

# External Services
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Monitoring and Analytics
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=info

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@plotweaver.com

# Collaboration Features
WEBSOCKET_URL=ws://localhost:8001
COLLABORATION_SERVER_URL=http://localhost:8001

# Content Moderation
CONTENT_MODERATION_ENABLED=true
CONTENT_MODERATION_API_KEY=your_moderation_api_key

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=10

# Session Configuration
SESSION_MAX_AGE=86400
SESSION_UPDATE_AGE=3600

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_FORMAT=json
LOG_DESTINATION=console
LOG_FILE=/app/logs/app.log

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Feature Rollout
FEATURE_FLAG_SERVICE=internal
FEATURE_FLAG_REFRESH_INTERVAL=300000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30